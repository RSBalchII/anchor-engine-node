# Example local env settings for ECE_Core. Copy to `configs/.env` to use as defaults
# Override any values with a project-level `.env` or system env variables.

# LLM
LLM_API_BASE=http://localhost:8080/v1
LLM_MODEL_NAME=ZeroXClem/Qwen3-4B-MiniMight-Q8.gguf  # Updated to Qwen3-4B-MiniMight model
LLM_CONTEXT_SIZE=65536  # Increased to 64k for massive context window capability (sweet spot for 4B model)
LLM_MAX_TOKENS=4096     # Increased for longer responses
LLM_GPU_LAYERS=-1
LLM_CHAT_TEMPLATE=qwen3-thinking # Switched to qwen3-thinking for better tool support and thinking token handling
LLM_EMBEDDINGS_DEFAULT_BATCH_SIZE=2
LLAMA_CACHE_RAM=0
LLAMA_BATCH_SIZE=1024   # Optimized to conserve VRAM/RAM during processing
LLAMA_UBATCH_SIZE=1024  # Optimized to conserve VRAM/RAM during processing
WEAVER_BATCH_SIZE=1     # Reduced for memory efficiency
WEAVER_SLEEP_BETWEEN_BATCHES=1.0

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600
REDIS_MAX_TOKENS=32000  # Increased to accommodate larger context windows

# Server
ECE_HOST=127.0.0.1
ECE_PORT=8000
ECE_LOG_LEVEL=INFO

# Security
ECE_REQUIRE_AUTH=false
ECE_API_KEY=
# Weaver settings - ensure memory writes are enabled
WEAVER_THRESHOLD=0.55
WEAVER_DRY_RUN_DEFAULT=false
WEAVER_COMMIT_ENABLED=true
