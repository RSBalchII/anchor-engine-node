{
  "manifest_version": 3,
  "name": "ECE Browser Bridge",
  "version": "1.0.0",
  "description": "Bridge between your browser and Executive Cognitive Enhancement system",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://gemini.google.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://www.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ECE Browser Bridge"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://www.anthropic.com/*"
      ],
      "js": ["content_scripts/extract_gemini.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}