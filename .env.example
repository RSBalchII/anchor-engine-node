# ECE Configuration File
# Copy this file to .env and update the values as needed

# LLM Configuration
LLM_ACTIVE_PROVIDER=llama_cpp
LLM_LLAMA_CPP_MODEL_PATH=./models/gemma-3-4b-it-qat-abliterated.q8_0.gguf
LLM_LLAMA_CPP_API_BASE=http://localhost:8080/v1

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ECE_secure_password_2025
REDIS_URL=redis://localhost:6379

# Port Configuration
LLAMA_CPP_PORT=8080
ORCHESTRATOR_PORT=8000
DISTILLER_PORT=8001
QLEARNING_PORT=8002
ARCHIVIST_PORT=8003
INJECTOR_PORT=8004
FILESYSTEM_PORT=8006
WEBSEARCH_PORT=8007

# System Resources
MEMORY_LIMIT_MB=2048

# Thinker Agent Configuration
THINKER_MODEL=./models/gemma-3-4b-it-qat-abliterated.q8_0.gguf
THINKER_SYNTHESIS_MODEL=./models/gemma-3-4b-it-qat-abliterated.q8_0.gguf
THINKER_SYNTHESIS_MAX_TOKENS=8192
THINKER_TIMEOUT=180

# Llama.cpp Server Configuration
LLAMA_CPP_MODEL=./models/gemma-3-4b-it-qat-abliterated.q8_0.gguf
LLAMA_CPP_CONTEXT_SIZE=4096
LLAMA_CPP_N_GPU_LAYERS=-1
LLAMA_CPP_TIMEOUT=1800

# Debug Configuration
DEBUG_VERBOSE_OUTPUT=false

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose.yml

# Logging Configuration
LOG_DIR=logs
LOG_FILE_SIMPLIFIED_STARTUP=debug_log_simplified_startup.txt

# UTCP Configuration
UTCP_REGISTRY_URL=http://localhost:9999